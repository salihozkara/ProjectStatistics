<?xml version="1.0" encoding="UTF-8"?>
<sourcemonitor_commands>
    <command>

        <!-- path is relative to this command file -->

        <project_file>{{project_file_directory}}\{{project_name}}.smproj</project_file>

        <project_language>{{project_language}}</project_language>

        <source_directory>{{project_directory}}</source_directory>

        <include_subdirectories>true</include_subdirectories>

        <checkpoint_name>{{project_name}}</checkpoint_name>

        <modified_complexity>true</modified_complexity>

        <export>
            <export_file>{{reports_path}}\{{project_name}}.xml</export_file>
            <export_type>1 (project summary as xml)</export_type>
        </export>

    </command>

</sourcemonitor_commands>